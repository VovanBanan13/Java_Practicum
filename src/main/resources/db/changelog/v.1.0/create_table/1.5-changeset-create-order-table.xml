<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="1.5" author="Vladimir_Kirdyankin">
        <createTable tableName="order">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="date" type="date"/>
            <column name="time" type="time"/>
            <column name="user_id" type="int"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="order" baseColumnNames="user_id"
                                 constraintName="order_user_id_user_id"
                                 referencedTableName="user" referencedColumnNames="id" onUpdate="CASCADE"/>

        <rollback>
            <dropTable tableName="order"/>
        </rollback>
    </changeSet>

</databaseChangeLog>